{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
//      "*": ["types/*.d.ts"]
    }
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [ "node_modules" ]
}
